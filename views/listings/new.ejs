<% layout("/layouts/boilerplate.ejs") %>
<div class="row mb-3">
  <div class="col-8 offset-2 form-queriy">
    <h3 style="text-align: center">Create New Dish</h3>
    <form
      method="post"
      action="/listings"
      class="needs-validation"
      novalidate
      enctype="multipart/form-data"
    >
      <div class="mt-3">
        <label for="title" class="form-label">Title</label>
        <input
          type="text"
          id="title"
          name="listing[title]"
          class="form-control"
          required
        />
      </div>
      <div class="mt-3">
        <label for="description" class="form-label">Description</label>
        <textarea
          name="listing[description]"
          id="description"
          cols="30"
          rows="3"
          class="form-control"
          required
        ></textarea>
      </div>
      <div class="mt-3">
        <label for="image" class="form-label">Upload Image</label>
        <input
          type="file"
          id="image"
          name="listing[image]"
          class="form-control"
          required
        />
      </div>
      <div class="row">
        <div class="mt-3 col-4">
          <label for="price" class="form-label">Price</label>
          <input
            type="number"
            id="price"
            name="listing[price]"
            class="form-control"
            required
          />
        </div>
        <div class="mt-3 col">
          <label for="category" class="form-label">Category</label><br />
          <select
            id="category"
            name="listing[category]"
            class="f-category"
            required
          >
            <option value="">Please choose an option</option>
            <option value="veg">Veg</option>
            <option value="non-veg">Non Veg</option>
          </select>
        </div>
      </div>
      <br />
      <button class="btn btn-dark edit-btn" style="width: 100% !important">
        Submit
      </button>
    </form>
  </div>
</div>
