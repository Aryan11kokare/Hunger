<% layout("/layouts/boilerplate.ejs") %>
<div class="row row-cols-lg-4 row-cols-md-3 row-cols-sm-2 mt-3">
  <% for(let listing of listings){ %>
  <a href="/listings/<%= listing._id %>" style="text-decoration: none !important;">
    <div class="card listing-card col">
      <img src="<%= `http://localhost:3030/${listing.image.filename}` %>" class="card-img-top" alt="..." />
      <div class="card-body">
        <p class="card-text">
          <b> <%= listing.title %></b> <br />
          &#8377;<%= listing.price.toLocaleString("en-IN") %>
        </p>
      </div>
    </div>
  </a>
  <% } %>
</div>